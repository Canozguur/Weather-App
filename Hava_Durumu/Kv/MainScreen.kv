<search>:
    size_hint:.75,.65
    MDCard:
        FloatLayout:
            id:spot

            MDTextFieldRect:
                id:city
                pos_hint:{"center_x":.5,"center_y":.8}
                size_hint: .7,.075
                hint_text: "Search"
                mode: "rectangle"
                text:""
            MDFillRoundFlatButton:
                size_hint: .6,.1
                text:"search"
                pos_hint:{"center_x":.5,"center_y":.7}
                on_release: app.change_screen(city.text,usa.active)
            MDCheckbox:
                id : turkey
                size_hint: .1,.1

                pos_hint:{"center_x":.75,"center_y":.6}
                size: "48dp", "48dp"
                active : True if usa.active == False else False
                ripple_scale:0
                color : (1,0,0,1)
                selected_color:(1,0,0,1)
            MDCheckbox:
                size_hint: .1,.1
                id : usa
                pos_hint:{"center_x":.75,"center_y":.55}
                size: "48dp", "48dp"
                active : False if turkey.active == True else True
                ripple_scale:0
            Label:
                text:"Red is for TURKEY"
                pos_hint:{"center_x":.43,"center_y":.6}
                color: 1,0,0,1
                font_size: "17sp"
            Label:
                text:"Blue is for USA"
                pos_hint:{"center_x":.40,"center_y":.55}
                color: 0,0,1,1
                font_size: "17sp"
            Label:
                text:"- data from timeanddate.com"
                pos_hint:{"center_x":.45,"center_y":.075}
                font_size: "15sp"
                color: 0,0,0,1
<card_of_daily>

    BoxLayout:
        canvas.before:
            Color:
                id :color_of_daily
                rgba: root.color
            Rectangle:
                size: self.size
                pos: self.pos
        MDLabel:
            padding_x : 17
            size_hint : .4,1
            text : root.day
            halign : 'left'
            color : root.text_color
            font_size: "16sp"
        ImageButton:
            size_hint:.25,1
            source: "{}".format(root.image)
        Label:
            size_hint:.45,1
            text : root.temperature
            valign:'center'
            color: root.text_color
            font_size: "15sp"

<card_of_hours>
    BoxLayout:
        canvas.before:
            Color:
                id :color_of_daily
                rgba: root.bc_color
            Rectangle:
                size: self.size
                pos: self.pos
        orientation:"vertical"
        Label:
            size_hint:1,.25
            text : root.hour
            valign:'center'
            color: root.text_color

        BoxLayout:
            size_hint:1,.5
            ImageButton:
                #source: "weather_images/passing_clouds.png"
                source: "{}".format(root.status_of_weather)
        Label:
            size_hint:1,.25
            text : root.temp_of_hour
            valign :'center'
            color: root.text_color
