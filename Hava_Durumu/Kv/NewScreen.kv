<NewScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1,.12
            canvas.before:
                Color:
                    id : color_of_daily
                    rgba :(.517, .984, .9764, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id : city
                size_hint:.8,1
                text:"ISTANBUL"
                color: 0,122,122,1
                font_size: "18sp"
            BoxLayout:
                size_hint:.2,1
                MDFloatingActionButton:
                    size_hint:.5,.5
                    icon: "plus"
                    data:{'language-python': 'Python'}
                    on_release:app.new_one()

        BoxLayout:
            size_hint:1,.2
            ScrollView:
                bar_width:"0dp"
                pos_hint: {"center_x": .5, "center_y":.5}
                GridLayout:
                    # day
                    id : hour
                    rows: 1
                    size_hint_x: None
                    width : self.minimum_width
                    col_default_width: "50dp"
                    col_force_default : True

        BoxLayout:
            size_hint:1,.38
            ScrollView:
                pos_hint: {"center_x": .5, "center_y":.5}
                GridLayout:
                    # day
                    id : daily
                    cols: 1
                    size_hint_y: None
                    height : self.minimum_height
                    row_default_height: "42dp"
                    row_force_default : True
        BoxLayout:
            size_hint:1,.3
            orientation : "vertical"
            BoxLayout:
                size_hint:1,.3
                canvas.before:
                    Color:
                        rgba: (0,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDLabel:
                    id : today_info
                    text: ""
                    color : 1,1,1,1
                    padding_x:25
            BoxLayout:
                size_hint:1,.3
                BoxLayout:
                    BoxLayout:
                        orientation:"vertical"
                        canvas.before:
                            Color:
                                rgba: (.89,.839,.203,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10,10,10,10]
                        MDLabel:
                            #color: .14, .87, .890,1
                            padding_x: 20
                            size_hint:1,.4
                            text:"Sunrise"
                            color : 1,1,1,1
                        MDSeparator:
                            size_hint:.95,.03
                        MDLabel:
                            color: 1,1,1 ,1
                            id : sunrise
                            size_hint:1,.6
                            text: "07:42"
                            font_size:"17sp"
                            halign:'center'

                BoxLayout:
                    BoxLayout:
                        orientation:"vertical"
                        canvas.before:
                            Color:
                                rgba: (.019,.11,.47 ,1)
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: [10,10,10,10]
                        MDLabel:
                            padding_x: 20
                            size_hint:1,.4
                            text:"Sunset"
                            color: 1,1,1 ,1
                        MDSeparator:
                            size_hint:1,.03
                        MDLabel:
                            color: 1,1,1 ,1
                            id : sunset
                            size_hint:1,.6
                            text:"17:52"
                            halign:'center'
                            font_size:"20sp"
            BoxLayout:
                size_hint:1,.3
                BoxLayout:
                    BoxLayout:
                        orientation:"vertical"
                        MDLabel:
                            size_hint:1,.4
                            text:"Wind"
                            padding_x: 20
                        MDSeparator:
                            size_hint:1,.03
                        MDLabel:
                            id : wind
                            size_hint:1,.6
                            text: "23 km/h"
                            font_size:"20sp"
                            halign:'center'
                BoxLayout:
                    BoxLayout:
                        orientation:"vertical"
                        MDLabel:
                            size_hint:1,.4
                            text:"Feels Like"
                            padding_x: 20
                            color : 0,122,122,1
                        MDSeparator:
                            size_hint:1,.03
                        MDLabel:
                            id:feels_like
                            color : 0,122,122,1
                            size_hint:1,.6
                            text: ""
                            font_size:"20sp"
                            halign:'center'